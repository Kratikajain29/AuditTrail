{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=audittrail.db"
  },
  "AuditTrail": {
    "DatabaseConnectionString": "Data Source=audittrail.db",
    "MaxRetryAttempts": 3,
    "LogLevel": "Information",
    "MaxAuditLogsPerRequest": 1000,
    "EnableDetailedLogging": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "AuditTrailAPI": "Information"
    }
  },
  "AllowedHosts": "*"
} 